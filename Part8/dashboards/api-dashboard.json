{
  "dashboard": {
    "title": "Heart Disease API Monitoring",
    "tags": ["mlops", "api", "heart-disease"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(api_requests_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(api_requests_total[5m])",
            "refId": "A",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "Request Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(api_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "Total Predictions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(predictions_total)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 5,
        "title": "Predictions by Risk Level",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (risk_level) (predictions_total)",
            "refId": "A",
            "legendFormat": "{{risk_level}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12}
      },
      {
        "id": 6,
        "title": "Active Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "active_requests",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12}
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(api_errors_total[5m])",
            "refId": "A",
            "legendFormat": "{{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12}
      }
    ],
    "refresh": "10s",
    "schemaVersion": 16,
    "version": 1
  }
}

